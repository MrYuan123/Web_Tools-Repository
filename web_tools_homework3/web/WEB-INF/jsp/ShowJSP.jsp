<%@ page contentType="text/html;charset=UTF-8" language="java" %>

<html>
<head>
    <title>Book Application</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/united/bootstrap.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</head>
<body>
<jsp:include page="NavigationBar.jsp" flush="true"></jsp:include>
<div class="row" id="replaceSection">
    <div class="col-md-2"></div>
    <div class="col-md-8" >
        <h1></h1>
        <div class="card text-white bg-secondary mb-3">
            <div class="card-header">Core Tag Lib</div>
            <div class="card-body">
                <strong><c:out value="<c:set> + <c:out>"/></strong>
                <c:set var="Income" value="${4000*4}"/>
                <li>This is the section to test  "<c:out value="<c:set> + <c:out>"/> " tags,
                    and number <c:out value="${Income}"/> is generated by JSTL.</li>

                <strong><c:out value="<c:remove>"/></strong>
                <c:set var="temp"  value=" There is a value"/>
                <li>Before Remove Value is: <c:out value="${temp}"/></li>
                <c:remove var="temp"/>
                <li>After Remove Value is: <c:out value="${temp}"/></li>

                <strong><c:out value="<c:forTokens>"/></strong>
                <c:forTokens items="Leo-Bob-Mary-Martin-Smith" delims="-" var="name">
                <li><c:out value="${name}"/></li>
                </c:forTokens>

                <strong><c:out value="<c:when> + <c:choose> + <c:otherwise>"/></strong>
                <c:set var="salary" value="${1600}"/>
                <li>My salary is :<c:out value="${salary}"/></li>
                <li>
                <c:choose>
                    <c:when test="${salary > 1000}">
                        Salary is more thant 1000.
                    </c:when>
                    <c:otherwise>
                        Salary is less than 1000.
                    </c:otherwise>
                </c:choose>
                </li>
            </div>
        </div>

        <div class="card border-secondary mb-3">
            <div class="card-header">Formatting Tag Lib</div>
            <div class="card-body">
                <strong><c:out value="<fmt:setTimeZone> + <fmt:setTimeZone>"/></strong>
                <li>Using tags to generate Time:
                    <c:set var="str" value="<%=new java.util.Date()%>" />
                    <fmt:setTimeZone value="EST" />
                    <fmt:formatDate value="${str}" type="both" timeStyle="long" dateStyle="long" />
                </li>

                <strong><c:out value="<fmt:formatNumber>"/></strong>
                <c:set var="num" value="213.3245" />
                <li>This number is: <c:out value="${num}"/></li>
                <li> Formate Into Currency: <fmt:formatNumber value="${num}" type="currency" /></li>
                <li> Formate By Using Pattern: <fmt:formatNumber value="${num}" pattern="###.###YUAN" /></li>
                <li> Formate By Restricting Fraction: <fmt:formatNumber type="number" maxFractionDigits="1" value="${num}" /></li>

                <strong><c:out value="<fmt:formatDate>"/></strong>
                <c:set var="Date" value="<%=new java.util.Date()%>" />
                <li>Formatted Date: <fmt:formatDate type="date" value="${Date}" />  </li>
                <li>Formatted Date and Time in long style :<fmt:formatDate type="both" dateStyle="long" timeStyle="long"  value="${Date}" /> </li>
            </div>
        </div>

        <div class="card bg-light mb-3">
            <div class="card-header">JSTL Function Tags</div>
            <div class="card-body">
                <c:set var="String" value="This is a test"/>
                <strong><c:out value="fn:contains() + fn:containsIgnoreCase()"/></strong>
                <c:if test="${fn:contains(String, 'test')}">
                    <li>This string contains word "test", detected by: fn:contains()</li>
                </c:if>
                <c:if test="${fn:containsIgnoreCase(String, 'test')}">
                <li>This string contains word "test", detected by: fn:containsIgnoreCase()</li>
                </c:if>

                <strong><c:out value="fn:length()"/></strong>
                <c:set var="str1" value="This is first string"/>
                <li>Length of this String is: ${fn:length(str1)}</li>

                <strong><c:out value="fn:toUpperCase()"/></strong>
                <c:set var="site" value="javatpoint.com"/>
                <li>${site}'s Up Case Word Is ${fn:toUpperCase(site)}</li>

                <strong><c:out value="fn:replace()"/></strong>
                <c:set var="author" value="Leonard Yuan"/>
                <li>Replace Leonard as Leo: ${fn:replace(author, "Leonard", "Leo")}</li>
            </div>
        </div>

        <div class="card border-dark mb-3">
            <div class="card-header">JSTL XML Tags</div>
            <div class="card-body">
                <strong><c:out value="<x:out attributes/>"/></strong><br>
                <strong><c:out value="<x:parse />"/></strong><br>
                <c:set var="USER">
                    <users>
                        <user>
                            <name>Leo</name>
                            <age>24</age>
                        </user>
                        <user>
                            <name>Mary</name>
                            <age>22</age>
                        </user>
                        <user>
                            <name>Tylor</name>
                            <age>25</age>
                        </user>
                    </users>
                </c:set>
                <x:parse xml="${USER}" var="output"/>
                <li>The second user nama is <x:out select="$output/users/user[2]/name" /></li>
                <li>The third user age  is <x:out select="$output/users/user[3]/age" /></li>

                <strong><c:out value="<x:set>"/></strong>
                <x:set var="show" select="$output/users/user[2]/name"/>
                <li>The second user nama is <x:out select="$show" /> </li>
            </div>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>
</body>
<script>
</script>
</html>
